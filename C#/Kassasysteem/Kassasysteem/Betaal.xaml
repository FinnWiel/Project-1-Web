<Window x:Class="Kassasysteem.Betaal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kassasysteem"
        mc:Ignorable="d"
        MinHeight="450" MinWidth="800" MaxHeight="450" MaxWidth="800"
        Title="Betaal" Height="450" Width="800"  Background="black">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="0.2*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.RowSpan="4" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" Height="387" >
            <TextBlock  Foreground="white" >Test</TextBlock>
            <TextBlock  Foreground="white" >Test</TextBlock>
            <TextBlock  Foreground="white" >Test</TextBlock>
            <TextBlock  Foreground="white" >Test</TextBlock>
            <TextBlock  Foreground="white" >Test</TextBlock>
            <Button VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,200" Foreground="White" Background="DarkBlue">Volgende klant</Button>
        </StackPanel>

        <ProgressBar Name="progressBar" Width="800" Height="20" Minimum="0" Maximum="100" Value="0" Grid.ColumnSpan="3"  Grid.Row="4" Background="Green" />

        <StackPanel Grid.Row="0" Grid.Column="1" Margin="10px">
            <ComboBox Width="200" SelectedIndex="0">
                <ComboBoxItem IsEnabled="False">Fietsen</ComboBoxItem>
                <ComboBoxItem Tag="20,00" >Aanhangfiets</ComboBoxItem>
                <ComboBoxItem Tag="35,00">Bakfiets</ComboBoxItem>
                <ComboBoxItem Tag="30,00">Driewielfiets</ComboBoxItem>
                <ComboBoxItem Tag="30,00">Elektrische fiets</ComboBoxItem>
                <ComboBoxItem Tag="15,00">Kinderfiets</ComboBoxItem>
                <ComboBoxItem Tag="45,00">Ligfiets</ComboBoxItem>
                <ComboBoxItem Tag="12,50">Oma fiets</ComboBoxItem>
                <ComboBoxItem Tag="15,00">Racefiets</ComboBoxItem>
                <ComboBoxItem Tag="15,00">Speed pedelac</ComboBoxItem>
                <ComboBoxItem Tag="12,50">Stadsfiets</ComboBoxItem>
                <ComboBoxItem Tag="10,00">Vouwfiets</ComboBoxItem>
                <ComboBoxItem Tag="15,00">Zitfiets</ComboBoxItem>
            </ComboBox>

            <ComboBox Width="200" SelectedIndex="0">
                <ComboBoxItem IsEnabled="False">Verzekeringen</ComboBoxItem>
                <ComboBoxItem Content="Fietsen" />
                <ComboBoxItem Content="Verzekeringen" />
                <ComboBoxItem Content="Services" />
            </ComboBox>

            <ComboBox Width="200" SelectedIndex="0">
                <ComboBoxItem IsEnabled="False">Services</ComboBoxItem>
                <ComboBoxItem Content="Fietsen" />
                <ComboBoxItem Content="Verzekeringen" />
                <ComboBoxItem Content="Services" />
            </ComboBox>
            <TextBox  Width="200" Foreground="black" >Dagen:</TextBox>
            <Button Width="100" Background="blue" Foreground="white" Content="Volgende artikel" />

        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1" >
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5" Foreground="white">producten:</TextBlock>
            <TextBlock  Foreground="White">Aanhangfiets</TextBlock>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10,70,0,0" Foreground="White" >Te betalen bedrag:</TextBlock>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Bottom" Foreground="white">€200</TextBlock>
        </StackPanel>






        <Grid Grid.ColumnSpan="1" Grid.RowSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Label Grid.Column="0" Grid.Row="0" Content="5 cent" FontSize="20" HorizontalAlignment="Center" Foreground="white" VerticalAlignment="Center"/>
            <Image Source="Assets\5eurocent.jpg" Grid.Row="0" Grid.Column="1" Margin="2,2,2,2" />
            <Label Grid.Column="2" Grid.Row="0" Content="0 keer" FontSize="20" HorizontalAlignment="Center" Foreground="white" VerticalAlignment="Center"/>

            <Label Grid.Column="0" Grid.Row="1" Content="10 cent" FontSize="20" HorizontalAlignment="Center" Foreground="white" VerticalAlignment="Center"/>
            <Image Source="Assets\10eurocent.jpg" Grid.Row="1" Grid.Column="1" Margin="2"/>
            <Label Grid.Column="2" Grid.Row="1" Content="0 keer" FontSize="20" HorizontalAlignment="Center" Foreground="white" VerticalAlignment="Center"/>

            <Label Grid.Column="0" Grid.Row="2" Content="20 cent" FontSize="20" HorizontalAlignment="Center" Foreground="white" VerticalAlignment="Center"/>
