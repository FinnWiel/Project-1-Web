            <Label Grid.Column="2" Grid.Row="3" Content="0 keer" FontSize="20" HorizontalAlignment="Center" Foreground="white" VerticalAlignment="Center"/>

            <Label Grid.Column="0" Grid.Row="4" Content="1 euro" FontSize="20" HorizontalAlignment="Center" Foreground="white" VerticalAlignment="Center"/>
            <Image Source="Assets/1euro.jpg" Grid.Row="4" Grid.Column="1" Margin="2"/>
